general {
    output_format = "i3bar"
    colors = true
    interval = 5
}

order += "disk /"
order += "disk /home"
order += "volume master"
order += "wireless wlan0"
order += "ethernet eth0"
order += "load"
order += "tztime local"

tztime local {
    format = "%Y-%m-%d %H:%M:%S"
}

load {
    format = "%5min"
}

disk "/" {
    format = "%free"
}

disk "/home" {
    format = "%free"
}
