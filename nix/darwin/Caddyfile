{
	log {
		format console
	}
}
# Attic
https://lithium.local:10100 {
	tls /etc/caddy/certs/lithium-server.crt /etc/caddy/certs/lithium-server.key
	reverse_proxy localhost:18080
	handle {
		respond "Not found" 404
	}
	log {
		format console
		output_file /var/log/caddy/attic.log
	}
}

